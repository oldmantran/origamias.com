# Origami Chat API - Environment Variables
# Copy this file to .env and fill in your values

# Grok (xAI)
GROK_API_KEY=
GROK_MODEL=grok-3-fast

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM_EMAIL=
MAILGUN_FROM_NAME=Origami Chat
MAILGUN_REGION=us
# MAILGUN_SIGNING_KEY=  # Only needed if verifying webhooks

# CORS - comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5500,https://origamias.com

# Database path (optional - defaults to ./data/chat.db)
# DB_PATH=

# Node environment
NODE_ENV=development
